{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "build/webpack.base.conf.js",
      },
    },
  },
  "extends": "airbnb/base",
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "arrow-body-style": "off",
    "indent": "warn",
    "consistent-return": "off",
    "no-else-return": "off",
    "no-param-reassign": ["error", { props: false }],
    "arrow-parens": "off",
  },
  "plugins": ["html", "jasmine"],
  "env": {
    "jasmine": true,
    "es6": true,
    "browser": true,
  },
  "globals": {
    "jest": false
  }
}
